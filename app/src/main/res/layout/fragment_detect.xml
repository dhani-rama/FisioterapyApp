<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ui.DetectFragment">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_header_detection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lora_bold"
        android:padding="8dp"
        android:text="Deteksi"
        android:textColor="@color/light_purple"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/img_logo"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_header_detection"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/icon_runner" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_first_detect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lora"
        android:gravity="center"
        android:maxEms="20"
        android:paddingVertical="16dp"
        android:text="1. Posisikan kamera menghadap anda"
        android:textColor="@color/light_purple"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_logo" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_second_detect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lora"
        android:gravity="center"
        android:maxEms="20"
        android:paddingVertical="16dp"
        android:text="2. Ikuti gerakan yang diminta"
        android:textColor="@color/light_purple"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_first_detect" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_third_detect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lora"
        android:gravity="center"
        android:maxEms="20"
        android:paddingVertical="16dp"
        android:text="3. Bila muncul tanda “MERAH’, ulangi gerakan"
        android:textColor="@color/light_purple"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_second_detect" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_fourth_detect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lora"
        android:gravity="center"
        android:maxEms="20"
        android:paddingVertical="16dp"
        android:text="4. Bila muncul tanda “HIJAU”, lanjut!"
        android:textColor="@color/light_purple"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_third_detect" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_detect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:fontFamily="@font/lora_bold"
        android:paddingHorizontal="36dp"
        android:paddingVertical="8dp"
        android:text="Mulai"
        android:textAllCaps="false"
        android:textSize="20sp"
        app:cornerRadius="15dp"
        app:elevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_fourth_detect"
        app:rippleColor="#DBDBDB" />

</androidx.constraintlayout.widget.ConstraintLayout>